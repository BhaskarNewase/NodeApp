extends ../layout

block content
  .page-header
    h3 Create New Blog 
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true, value=(data?(data.title?data.title:''):''))
    .form-group
      label(class='col-sm-2 control-label', for='message') Description
      .col-sm-8
        textarea.form-control(name='description', id='message', rows='7')data?(data.title?data.title:''):''
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Submit
